<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lec.spring.repository.CommentRepository">

    <resultMap id="CommentResultMap" type="com.lec.spring.domain.Comment">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="postId" column="post_id"/>
        <result property="parentId" column="parent_id"/>
        <result property="content" column="content"/>
        <result property="createdAt" column="createdat"/>
        <result property="isPicked" column="ispicked"/>
        <association property="user" javaType="com.lec.spring.domain.User">
            <id property="id" column="user_id"/>
            <result property="username" column="user_username"/>
            <result property="name" column="user_name"/>
        </association>
    </resultMap>

    <select id="findByPostId" resultMap="CommentResultMap">
        SELECT c.id,
               c.user_id,
               c.post_id,
               c.parent_id,
               c.content,
               c.createdat,
               c.ispicked,
               u.username AS user_username,
               u.name     AS user_name
        FROM comment c
                 JOIN user u ON c.user_id = u.id
        WHERE c.post_id = #{postId}
        ORDER BY c.parent_id ASC NULLS FIRST, c.createdat ASC
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO comment (user_id, post_id, parent_id, content)
        VALUES (#{userId}, #{postId}, #{parentId}, #{content})
    </insert>

    <select id="findById" resultMap="CommentResultMap">
        SELECT c.id,
               c.user_id,
               c.post_id,
               c.parent_id,
               c.content,
               c.createdat,
               c.ispicked,
               u.username AS user_username,
               u.name     AS user_name
        FROM comment c
                 JOIN user u ON c.user_id = u.id
        WHERE c.id = #{id}
    </select>

    <update id="update">
        UPDATE comment
        SET content = #{content}
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE
        FROM comment
        WHERE id = #{id}
    </delete>
    <delete id="deleteByParentId">
        DELETE
        FROM comment
        WHERE parent_id = #{parentId}
    </delete>

    <update id="updateIsPicked">
        UPDATE comment
        SET ispicked = #{isPicked}
        WHERE id = #{id}
    </update>

</mapper>